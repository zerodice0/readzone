# Database
DATABASE_URL="file:./packages/backend/dev.db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (for email verification and password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="ReadZone <noreply@readzone.com>"

# Kakao API (도서 검색)
KAKAO_REST_API_KEY="your-kakao-rest-api-key"

# Application Configuration
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Session and Security
SESSION_SECRET="your-session-secret-change-this-in-production"
BCRYPT_ROUNDS=12

# File Upload (if implemented later)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Redis (if implemented for sessions/cache later)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="info"

# Development/Testing
SKIP_EMAIL_VERIFICATION="false"
MOCK_EMAIL_DELIVERY="false"