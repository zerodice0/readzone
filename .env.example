###############################################
# ReadZone 환경변수 예시 (.env.example)
#
# 개발 시 실제로 사용하는 값은 패키지별 .env.local에 설정하세요.
# - 백엔드: packages/backend/.env.local
# - 프론트: packages/frontend/.env.local
#
# 루트의 .env.local에는 시크릿을 두지 않습니다.
###############################################

############################
# Backend (NestJS API)
# 파일 위치: packages/backend/.env.local
############################

# Database (Neon/PostgreSQL 등)
DATABASE_URL=""
DIRECT_URL=""

# Server
NODE_ENV="development"
PORT=4001
CORS_ORIGIN="http://localhost:3000"

# JWT
JWT_SECRET=""
JWT_EXPIRES_IN="15m"           # Access Token 만료 (예: 15m, 30s, 1h)
JWT_REFRESH_EXPIRES_IN="7d"     # Refresh Token 만료 (절대 만료)
EMAIL_TOKEN_EXPIRES_IN="24h"    # 이메일 인증 토큰 만료

# Email (Resend)
RESEND_API_KEY=""
RESEND_FROM_EMAIL="ReadZone <onboarding@resend.dev>"
ENABLE_DEV_EMAIL="false"        # 개발 환경에서 실제 발송 여부

# Admin
INITIAL_ADMIN_EMAIL=""          # 초기 관리자 계정 이메일 (db:seed 실행 시 사용)

# reCAPTCHA v3 (서버 검증)
RECAPTCHA_SECRET=""
RECAPTCHA_MIN_SCORE="0.5"
RECAPTCHA_BYPASS="false"        # 개발 편의용(프로덕션에서는 false)

# File Storage
FILE_STORAGE_ROOT="./packages/backend/storage"
BACKEND_PUBLIC_URL="http://localhost:4001"

# (선택) 기타 외부 API 키 – 사용 시에만 추가
# KAKAO_API_KEY=""

############################
# Frontend (Vite)
# 파일 위치: packages/frontend/.env.local
############################

# API Base URL (개발)
VITE_API_BASE_URL="http://localhost:4001"

# reCAPTCHA v3 (클라이언트 사이트 키) – 공개 키만 저장
VITE_RECAPTCHA_SITE_KEY=""

# 주의: Vite에서는 VITE_ 접두사가 없는 변수는 클라이언트에 노출되지 않습니다.
