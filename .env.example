# Database Configuration
DATABASE_NAME=readzone
DATABASE_USER=readzone
DATABASE_PASSWORD=readzone123
DATABASE_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# Application Configuration
NODE_ENV=production
BACKEND_PORT=3001
FRONTEND_PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# External APIs
KAKAO_API_KEY=your-kakao-api-key

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# PWA Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Frontend Environment Variables
VITE_API_BASE_URL=http://localhost:3001/api
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (if implemented)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# S3/Object Storage (if implemented)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=readzone-uploads