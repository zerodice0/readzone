# Database
DATABASE_URL="file:./packages/backend/dev.db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (Resend 서비스 사용)
RESEND_API_KEY="re_your-resend-api-key"

# 개발 환경에서 실제 이메일 발송 활성화 (선택사항)
# true로 설정하면 개발 환경에서도 실제 이메일이 발송됩니다
# false이거나 설정하지 않으면 콘솔 로그만 출력됩니다
ENABLE_DEV_EMAIL="false"

# Kakao API (도서 검색)
KAKAO_REST_API_KEY="your-kakao-rest-api-key"

# Application Configuration
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Session and Security
SESSION_SECRET="your-session-secret-change-this-in-production"
BCRYPT_ROUNDS=12

# File Upload (if implemented later)
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Redis (if implemented for sessions/cache later)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Logging
LOG_LEVEL="info"

# Development/Testing
SKIP_EMAIL_VERIFICATION="false"
MOCK_EMAIL_DELIVERY="false"