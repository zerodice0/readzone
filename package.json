{
  "name": "readzone",
  "version": "1.0.0",
  "description": "독서 후 의견을 공유하는 독서 전용 커뮤니티 SNS 플랫폼",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "pnpm --filter @readzone/frontend dev",
    "dev:backend": "pnpm --filter @readzone/backend dev",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "build:frontend": "pnpm --filter @readzone/frontend build",
    "build:backend": "pnpm --filter @readzone/backend build",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "pnpm --filter @readzone/frontend lint",
    "lint:backend": "pnpm --filter @readzone/backend lint",
    "type-check": "pnpm run type-check:frontend && pnpm run type-check:backend",
    "type-check:frontend": "pnpm --filter @readzone/frontend type-check",
    "type-check:backend": "pnpm --filter @readzone/backend type-check",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "pnpm --filter @readzone/frontend test",
    "test:backend": "pnpm --filter @readzone/backend test",
    "db:generate": "pnpm --filter @readzone/backend db:generate",
    "db:migrate": "pnpm --filter @readzone/backend db:migrate",
    "db:reset": "pnpm --filter @readzone/backend db:reset",
    "db:seed": "pnpm --filter @readzone/backend db:seed",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist && rm -rf packages/*/.next && rm -rf pnpm-lock.yaml",
    "fresh-install": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "독서",
    "커뮤니티",
    "SNS",
    "독후감",
    "리뷰",
    "책",
    "도서"
  ],
  "author": "ReadZone Team",
  "license": "MIT"
}