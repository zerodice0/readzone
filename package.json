{
  "name": "readzone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "tsx scripts/database/reset-database.ts",
    "db:backup": "tsx scripts/database/backup-database.ts",
    "migrate:encryption": "tsx scripts/migrate-encryption.ts",
    "migrate:encryption:analyze": "tsx scripts/migrate-encryption.ts analyze",
    "migrate:encryption:validate": "tsx scripts/migrate-encryption.ts validate",
    "migrate:encryption:dry-run": "tsx scripts/migrate-encryption.ts dry-run",
    "migrate:encryption:execute": "tsx scripts/migrate-encryption.ts execute",
    "test:security": "tsx scripts/run-security-tests.ts development",
    "test:security:staging": "tsx scripts/run-security-tests.ts staging",
    "test:security:production": "tsx scripts/run-security-tests.ts production",
    "test:security:full": "npm run test:security && npm run test:security:staging",
    "test:compliance": "playwright test tests/security/compliance-validation.spec.ts --reporter=json",
    "test:penetration": "playwright test tests/security/penetration-tests.spec.ts --reporter=json",
    "test:encryption": "jest tests/security/client-encryption.test.ts --verbose",
    "test:performance": "playwright test tests/security/performance-security.spec.ts --reporter=json",
    "test:rbac-security": "tsx scripts/run-rbac-security-tests.ts test",
    "test:rbac-security:staging": "tsx scripts/run-rbac-security-tests.ts staging",
    "test:rbac-security:production": "tsx scripts/run-rbac-security-tests.ts production",
    "test:rbac-full": "npm run test:rbac-security && npm run test:rbac-security:staging",
    "docker:build": "docker build -t readzone:latest .",
    "docker:build:staging": "docker build -t readzone:staging .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local readzone:latest",
    "docker:up": "docker compose up -d",
    "docker:up:staging": "docker compose -f docker-compose.staging.yml up -d",
    "docker:up:production": "docker compose -f docker-compose.production.yml up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:validate": "tsx scripts/validate-docker-setup.ts --skip-build",
    "docker:validate:full": "tsx scripts/validate-docker-setup.ts",
    "perf:track": "tsx scripts/performance-tracker.ts analyze",
    "perf:track:collect": "tsx scripts/performance-tracker.ts collect",
    "perf:track:report": "tsx scripts/performance-tracker.ts report",
    "perf:regression": "tsx scripts/regression-detector.ts detect",
    "perf:regression:report": "tsx scripts/regression-detector.ts report",
    "perf:regression:test": "tsx scripts/regression-detector.ts alert-test"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.0.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tanstack/react-query": "^5.67.0",
    "@tanstack/react-query-devtools": "^5.67.0",
    "@types/ioredis": "^4.28.10",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.1.0",
    "immer": "^10.1.1",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.468.0",
    "next": "^15.4.3",
    "next-auth": "5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "quill": "^2.0.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.60.0",
    "react-hot-toast": "^2.5.2",
    "react-quill-new": "^3.6.0",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.5",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "autoprefixer": "^10.4.0",
    "chalk": "^5.5.0",
    "commander": "^12.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.4.3",
    "inquirer": "^12.1.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ora": "^8.1.1",
    "playwright": "^1.54.2",
    "postcss": "^8.5.0",
    "prettier": "^3.4.0",
    "prisma": "^6.0.0",
    "tsx": "^4.19.0"
  }
}
